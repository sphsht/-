public class ZywOo {
  public static int sumOfDifferences(int[] arr) {
    for (int i = 0; i < arr.length; i++) { //сортируем
            for (int j = 0; j < arr.length - 1; j++) {
                if (arr[j] > arr[j + 1]) {
                    int a = arr[j];
                    arr[j] = arr[j + 1];
                    arr[j + 1] = a;
                }
            }
        }
    int s=0;
    for (int j = 0; j < arr.length-1; j++)
   {
      s=s+(arr[j]-arr[j+1]);
    }
    return -s;
  }
}
